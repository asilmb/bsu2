{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "validators": {
      "type": "object",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "min_length": {
          "type": "integer"
        },
        "max_length": {
          "type": "integer"
        },
        "regexp": {
          "type": "string"
        }
      }
    },
    "mask": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "title",
    "type"
  ]
}